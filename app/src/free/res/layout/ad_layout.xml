<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adView_container">
        <!-- NativeExpressAdView is added programmatically here -->
        <Button style="@style/Widget.SmartReceipts.Button"
            android:id="@+id/adView_upsell"
            android:layout_width="match_parent"
            android:layout_height="@dimen/remove_ad_hint_height"
            android:text="@string/missing_ad_suggest_removal_upsell"
            android:layout_gravity="bottom"
            android:visibility="gone"/>
    </FrameLayout>

</FrameLayout>