<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Styles -->
    <style name="Widget">
    </style>

    <style name="Widget.SmartReceipts">
    </style>
    
    <style name="Widget.SmartReceipts.ActionBar" parent="Widget.AppCompat.ActionBar" >
        <item name="background">@drawable/action_bar_background</item>
        <item name="android:background">@drawable/action_bar_background</item>
    </style>
    
    <style name="Widget.SmartReceipts.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/purple_selector</item>
    </style>
    
    <style name="Widget.View.Divider.Horizontal" parent="Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
	</style>
	
    <style name="Widget.View.Divider.Vertical" parent="Widget">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
	</style>
    
    <style name="Widget.SmartReceipts.RelativeLayout" parent="Widget">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="Widget.SmartReceipts.RelativeLayout.SlidingPane" parent="Widget.SmartReceipts.RelativeLayout">
	    <!-- This color is needed here to make the SlidingPane look nice when dragging out
	    	 The cost of doing so is overdraw... Have to see if there's a better way        -->
	    <item name="android:background">@color/list_background</item>
    </style>
    
    <style name="Widget.SmartReceipts.RelativeLayout.Card" parent="Widget.SmartReceipts.RelativeLayout">
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">@dimen/card_padding</item>
	    <item name="android:background">@drawable/card_selector</item>
    </style>
    
    <style name="Widget.SmartReceipts.LinearLayout" parent="Widget">
        <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="Widget.SmartReceipts.LinearLayout.Card" parent="Widget.SmartReceipts.LinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
	    <item name="android:padding">@dimen/card_padding</item>
	    <item name="android:background">@drawable/card_selector</item>
    </style>
    
    <style name="Widget.SmartReceipts.ListView" parent="Widget">
        <item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:padding">@dimen/card_divider_padding</item>
		<item name="android:divider">@android:color/transparent</item>
 		<item name="android:dividerHeight">@dimen/card_divider_padding</item>
 		<item name="android:drawSelectorOnTop">false</item>
 		<item name="android:clipToPadding">false</item>
    	<item name="android:scrollbarStyle">outsideOverlay</item>
    </style>
    
    <style name="Widget.SmartReceipts.ProgressBar" parent="Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Widget.SmartReceipts.ProgressBar.Loading" parent="Widget.SmartReceipts.ProgressBar">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="Widget.SmartReceipts.TextView" parent="Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Widget.SmartReceipts.TextView.NoData" parent="Widget.SmartReceipts.TextView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/no_data_padding</item>
        <item name="android:text">@string/trip_no_data</item>
        <item name="android:textSize">@dimen/no_data_textSize</item>
    </style>

    <!-- Text Styles go below -->
    <style name="Widget.SmartReceipts.TextView.Display4">
        <item name="android:textSize">112sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Display3">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Display2">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Display1">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Body2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.SmartReceipts.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/Widget.SmartReceipts.TextView.Button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="Widget.SmartReceipts.TextView.Button.Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.SmartReceipts.Button.Secondary" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/Widget.SmartReceipts.TextView.Button.Secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_secondary_background</item>
    </style>

    <style name="Widget.SmartReceipts.FloatingActionButton">
        <item name="fab_colorNormal">@color/smart_receipts_colorPrimaryDark</item>
        <item name="fab_colorPressed">@color/smart_receipts_colorPrimaryDark_pressed</item>
        <item name="fab_colorRipple">@color/smart_receipts_ripple_dark</item>
        <item name="fab_size">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/fab_margins</item>
        <item name="android:layout_marginBottom">@dimen/fab_margins</item>
        <item name="android:layout_marginLeft">@dimen/fab_margins</item>
    </style>

    <style name="Widget.SmartReceipts.FloatingActionButton.Menu">
        <item name="menu_colorNormal">@color/smart_receipts_colorPrimaryDark</item>
        <item name="menu_colorPressed">@color/smart_receipts_colorPrimaryDark_pressed</item>
        <item name="menu_colorRipple">@color/smart_receipts_ripple_dark</item>
        <item name="menu_animationDelayPerItem">50</item>
    </style>

    <style name="Widget.SmartReceipts.GuideImage">
        <item name="android:layout_width">@dimen/guide_image_size</item>
        <item name="android:layout_height">@dimen/guide_image_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/guide_image_margin</item>
    </style>


</resources>
